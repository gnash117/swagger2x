        "parameters": [
          {"$ref": "#/parameters/interface-b"},
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/AirFlowControlBatch" },
            "x-example":
              {
                "id":     "unique_example_id",
                "airFlowControl": [
                  {
                    "id":    "unique_example_id",
                    "value": true
                  },
                  {
                    "id":         "unique_example_id",
                    "direction":  "right",
                    "speed":      3
                  }
                ]
              }
          }
        ],
        "responses": {
            "200": {
              "description" : "",
              "x-example":
                {
                  "id":     "unique_example_id",
                  "airFlowControl": [
                    {
                      "id":    "unique_example_id",

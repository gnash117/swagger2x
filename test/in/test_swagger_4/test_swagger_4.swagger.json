                  "id": "unique_example_id",
                  "airFlowControl": [
                    {
                      "href": "/BinarySwitchResURI",
                      "rel":  "contains",
                      "rt":   ["oic.r.switch.binary"],
                      "if":   ["oic.if.a"]
                    },
                    {
                      "href": "/AirFlowResURI",
                      "rel":  "contains",
